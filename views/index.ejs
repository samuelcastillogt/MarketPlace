                <img class="carrusel-imagen" src="<%= item.datos.imagen %>">
            </div>
                <div class="">
                    <h2 class="title-card"><%= item.datos.nombre %></h2>
                    <a href="/business/<%= item.datos.id %>" class="btn-link">Ver Menu</a>
                </div>
                
                </div></a>
       <% }) %>
    </section>
</div>
<section class="copy1">
    <div class="container">
        <h2>Descubre nuevos restaurantes, decide gracias a las calificaciones y experimenta nuevas experiencias.</h2>
    </div>
</section>
    <section id="blog" class="container">
    <% datos.posts.map(item =>{ %>
                    <h2 class="title-card"><%= item.datos.titulo %></h2>
                    <p><%= item.datos.descripcion %></p>
       <% }) %>
    </section>

</body>
</html>